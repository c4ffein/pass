     1369              except Exception as e:
     1370                  die(f"Error moving {old_path} to {new_path}: {e}")
     1371          else:  # copy
     1372              try:
     1373                  # Remove destination directory if it exists
     1374                  if os.path.exists(dest_dir_path):
     1375                      shutil.rmtree(dest_dir_path)
     1376 
